                        <a href="https://github.com/{{ contact.github }}">{{ contact.github }}</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="spacer spacer-vert">
        </div>
        <div class="projects">
            <h2>Projects</h2>
            <div class="project-wrapper">
                {{#each projects}}
                <div class="project">
                    <h3>{{ this.name }}</h3>
                    <a href="https://{{ this.url }}">{{ this.url }}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </body>
</html>
