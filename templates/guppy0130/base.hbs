<!doctype html>
<html>
    <head>
        <style>
{{{ styles }}}
        </style>
    </head>
    <body>
        <div class="name">
            <h1>{{ name }}</h1>
        </div>
        <div class="position">
            <p>{{ position }}</p>
        </div>
        {{# if (base64Encode 'img.jpg')}}
        <div class="picture">
            <img src="data:image/png;base64,{{base64Encode 'img.jpg'}}">
        </div>
        {{/ if }}
        <div class="big-body">
            <div class="left">
                <div class="exp">
                    <h2>Experience</h2>
                    {{#each experience}}
                        <div class="entry">
                            <time datetime="{{ this.dates.start }}">{{ this.dates.start }}</time> &ndash; <time datetime="{{ this.dates.end }}">{{ this.dates.end }}</time>
                            <h3>{{ this.name }}</h3>
                            <p class="italics">{{ this.position }}</p>
                            <p>{{ this.description }}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class="spacer spacer-horz"></div>
            <div class="right">
                <div class="edu">
                    <h2>Education</h2>
                    {{#each education}}
                        <div class="entry">
                            <time datetime="{{ this.dates.start }}">{{ this.dates.start }}</time> &ndash; <time datetime="{{ this.dates.end }}">{{ this.dates.end }}</time>
                            <h3>{{ this.name }}: {{ this.major }}</h3>
                            <ul>
                            {{#each this.classes}}
                                <li>{{ this.name }}</li>
                            {{/each}}
                            </ul>
                        </div>
                    {{/each}}
                </div>
                <div class="skills">
                    <h2>Skills</h2>
                    <ul>
                    {{#each skills}}
                        <li>{{ this.name }}</li>
                    {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="big-body-footer">
            <div class="left">
                <div class="about">
                    <h2>About</h2>
                    <p>I'm <b>{{ name }}</b>,<br> a {{ position }} in {{ location.city }}.</p>
                    <p>{{ description }}</p>
                    <p>Current interests: {{ stringify interests }}</p>
                </div>
            </div>
            <div class="spacer spacer-horz"></div>
            <div class="right">
                <div class="Contact">
                    <h2>Contact</h2>
                    <div class="email">
